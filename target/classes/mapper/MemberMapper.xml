<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="memberMapper">
	<sql id="selectMember">
 		select code,id,pwd,addr,email,email_accept,name,phone from member
 	</sql>
 	
	<select id="selectMemberById" parameterType="String" resultType="member">
		<include refid="selectMember"></include>
		where id=#{_parameter}
	</select>
	
	<select id="selectByPhone" parameterType="member" resultType="member">
		<include refid="selectMember"></include>
		where phone=#{phone} and name=#{name}
	</select>

<insert id="memberJoin" parameterType="member">
INSERT INTO MEMBER (CODE, ID, PWD, NAME, PHONE, EMAIL, EMAIL_ACCEPT,ADDR) 
VALUES (SEQ_NO.nextval,#{id}, #{pwd}, #{name}, #{phone}, #{email}, #{emailAccept},#{addr})
</insert>

</mapper>	








